
@{
    ViewBag.Title = "NewProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<hr />
<h2 class="text-center">Novi proizvod</h2>

<hr />

<div class="row">
    <!--Forma za dodavanje proizvoda-->
    <form id="formProduct" class="col-md-6 col-md-offset-2">
        <div class="form-group row">
            <label class="col-sm-4 control-label">Naziv:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" id="inputName">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 control-label">Kategorija:</label>
            <div class="col-sm-7">
                <select class="custom-select" id="selectCategory">
                    <option selected>Izaberite jednu kategoriju</option>
                    <option value="mobilni">Mobilni uređaji</option>
                    <option value="racunari">Računari i komponente</option>
                    <option value="tv">TV, audio, foto, video</option>
                    <option value="monitori">Monitori, periferije, štampači i konzole</option>
                    <option value="mreznaOprema">Mrežna oprema</option>
                    <option value="belaTehnika">Bela tehnika</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 control-label">Potkategorija:</label>
            <div class="col-sm-7">
                <select class="custom-select" id="selectSubcat">
                    <option selected>Izaberite jednu potkategoriju</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 control-label">Cena:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" id="inputPrice">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 control-label">Dodaj sliku:</label>
            <input type="file" class="form-control-file" accept=".jpg, .png, .jpeg, .gif, .bmp, .tif, .tiff|images/*" id="btnProductPicture">
        </div>

        <br />
        <br />
        <button class="btn btn-success col-sm-offset-3 btn-lg" id="addNewProduct" type="button"><i class="fas fa-check"></i><span>&nbsp; Dodaj proizvod</span></button>
        <button class="btn btn-danger col-sm-offset-1 btn-lg" id="discardAdding" type="button"><i class="fas fa-times"></i><span>&nbsp; Otkaži dodavanje</span></button>
        <br /> <br />
    </form>

    <div class="col-md-6">
        <!--Forma za dinamicko dodavanje karakteristika proizvoda-->
        <form id="formCharacteristics">
            <h4 class="text-center">Karakteristike</h4>
            <hr />
            <div class="form-group row">
                <label class="col-sm-4 control-label">Naziv:</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="inputCharName1">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 control-label">Vrednost:</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="inputCharValue1">
                </div>
            </div>
            <hr />
            <br /> <br />
        </form>

        <div class="form-group row">
            <button class="btn btn-success" id="addNewCharacteristic" type="button"><i class="fas fa-plus"></i><span>&nbsp; Dodaj novu karakteristiku</span></button>
            <button class="btn btn-danger" id="deleteCharacteristic" type="button" style="display:none"><i class="fas fa-trash-alt"></i><span>&nbsp; Obriši karakteristiku</span></button>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/Scripts/My scripts/NewProductScript.js")
}

